121  sudo apt update
  122  sudo apt install -y wget unzip
  123  wget https://releases.hashicorp.com/terraform/1.12.1/terraform_1.12.1_linux_amd64.zip
  124  unzip terraform_1.12.1_linux_amd64.zip
  125  sudo mv terraform /usr/local/bin/
  126  terraform version
  127  history



Uninstall Terraform

  134  sudo apt update
  sudo apt remove terraform -y
  131  sudo apt purge terraform -y 
  132  sudo rm /etc/apt/sources.list.d/hashicorp.list
  133  sudo rm /usr/share/keyrings/hashicorp-archive-keyring.gpg
  134  sudo apt update
  136  sudo rm /usr/local/bin/terraform
  137  terraform version

